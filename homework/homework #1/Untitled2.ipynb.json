    "def quicksort(x): \n",
    "    smaller = []\n",
    "    bigger = []\n",
    "    pivot = []\n",
    "\n",
    "    if len(x) <= 1:\n",
    "        return x\n",
    "\n",
    "    else:\n",
    "        pivot = x[0] \n",
    "        for i in x:\n",
    "            if i < pivot: \n",
    "                smaller.append(i)\n",
    "            elif i > pivot: \n",
    "                bigger.append(i)\n",
    "   \n",
    "\n",
    "    smaller = quicksort(smaller)\n",
    "    bigger = quicksort(bigger)\n",
    "    return smaller + [pivot] + bigger"
   ]
